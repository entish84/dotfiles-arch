# export SSH_KEY_PATH="~/.ssh/rsa_id"

# Set personal aliases, overriding those provided by oh-my-bash libs,
# plugins, and themes. Aliases can be placed here, though oh-my-bash
# users are encouraged to define aliases within the OSH_CUSTOM folder.
# For a full list of active aliases, run `alias`.
#
# Example aliases
# alias bashconfig="mate ~/.bashrc"
# alias ohmybash="mate ~/.oh-my-bash"

# --- 2. HISTORY & AUTOCOMPLETION ---
# Append to the history file, don't overwrite it
shopt -s histappend

# Save multi-line commands as one command
shopt -s cmdhist

# Huge history storage
export HISTSIZE=10000
export HISTFILESIZE=20000

# Ignore duplicate commands and lines starting with space
export HISTCONTROL=ignoreboth:erasedups

# Initialize Zoxide (smarter cd)
eval "$(zoxide init bash)"

# Initialize FZF (Fuzzy Finder)
[ -f /usr/share/fzf/key-bindings.bash ] && source /usr/share/fzf/key-bindings.bash
[ -f /usr/share/fzf/completion.bash ] && source /usr/share/fzf/completion.bash

# Use fd as the default command for fzf (ignores .git and ignores case)
export FZF_DEFAULT_COMMAND='fd --type f --strip-cwd-prefix --hidden --follow --exclude .git'
export FZF_CTRL_T_COMMAND="$FZF_DEFAULT_COMMAND"

# Editor setup (default to neovim or vim if installed, else nano)
if command -v micro &> /dev/null; then
    export EDITOR='micro'
    export VISUAL='micro'
elif command -v nvim &> /dev/null; then
    export EDITOR='nvim'
    export VISUAL='nvim'
else
    export EDITOR='nano'
    export VISUAL='nano'
fi

# -- Modern Replacements --
# eza (ls replacement)
alias ls='eza -l --icons=auto'            # Default ls uses eza with icons
alias ll='eza -al --icons=auto --group-directories-first' # List all, long format
alias lt='eza -a --tree --level=2 --icons=auto' # Tree view
alias l='eza -F --icons=auto'          # Quick list

# cat -> bat (syntax highlighting)
alias cat='bat --style=plain --paging=never'
alias less='bat --style=plain'

# grep -> ripgrep
alias grep='rg'

# -- Navigation (Zoxide handles 'cd', these are extras) --
alias ..='cd ..'
alias ...='cd ../..'
alias ....='cd ../../..'
alias ~='cd ~'
alias -- -='cd -'

# -- Arch Linux (Pacman/Yay) --
alias pacupd='sudo pacman -Syu'           # Update system
alias pacin='sudo pacman -S'              # Install package
alias pacrem='sudo pacman -Rns'           # Remove package + dependencies
alias pacsearch='pacman -Ss'              # Search package
alias pacclean='sudo pacman -Rns $(pacman -Qtdq)' # Remove orphaned packages

# -- Git Shortcuts (Common ones) --
alias gs='git status'
alias ga='git add'
alias gaa='git add --all'
alias gc='git commit -m'
alias gp='git push'
alias gpl='git pull'
alias gd='git diff'
alias gco='git checkout'
alias gl='git log --oneline --graph --decorate --all'

# -- QoL Improvements --
alias c='clear'
alias h='history'
alias myip='curl http://ipecho.net; echo'
alias path='echo -e ${PATH//:/\\n}'       # Pretty print PATH
alias untar='tar -xvf'
alias reload='source ~/.bashrc'           # Reload bash config immediately
alias weather='curl wttr.in/Hyderabad'    # Weather for your location
alias ed="$EDITOR"

# --- 5. PATH SETTINGS ---
# Add user local bin to path
export PATH="$HOME/.local/bin:$PATH"

export DOTNET_ROOT=/usr/share/dotnet/
export PATH=$PATH:$DOTNET_ROOT:$DOTNET_ROOT/tools

# --- 6. STARTUP ---
# Show system info on new terminal (optional)
if [ -x "$(command -v fastfetch)" ]; then
    fastfetch
fi

# --- YAZI FILE MANAGER SETUP ---

# Shell wrapper that changes directory on exit
function yy() {
	local tmp="$(mktemp -t "yazi-cwd.XXXXXX")"
	yazi "$@" --cwd-file="$tmp"
	if cwd="$(cat -- "$tmp")" && [ -n "$cwd" ] && [ "$cwd" != "$PWD" ]; then
		builtin cd -- "$cwd"
	fi
	rm -f -- "$tmp"
}

# Aliases
alias ya='yy'        # Short alias for wrapper
